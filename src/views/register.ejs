<form action="/register" method="POST">

    <h1>Register</h1>

    <!-- Name  -->
    <div>
        <label for="name" class="form-label">Enter Name</label>
        <input name="name" class="form-control" type="text" placeholder="Enter name" aria-label="default input example">
    </div>

    <!-- Email  -->
    <div class="mb-3">
        <label for="email" class="form-label">Enter Email address</label>
        <input name="email" type="email" class="form-control" id="inputEmail" placeholder="name@example.com">
    </div>

    <!-- Password -->
    <div>
        <label for="password" class="form-label">Enter Password</label>
        <input name="password" type="password" id="inputPassword" class="form-control" aria-describedby="passwordHelpBlock">
    </div>

    <div>
        <button type="submit">
            Register
        </button>
    </div>

</form>


